name: Create production promotion pull request
on:
  push:
    branches:
      - DEV_MAIN
jobs:
  productionPromotion:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          ref: production
      - name: Create Pull Request
        uses: peter-evans/create-pull-request@v6
        with:
          branch: QA
